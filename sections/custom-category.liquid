     display: grid; /* Включаем сетку для отображения товаров */
    grid-template-columns: repeat(2, 1fr); /* Две колонки */
    gap: 20px;
    margin: 0 auto; /* Центрируем сетку */
    max-width: 1366px; /* Ограничиваем ширину сетки */
