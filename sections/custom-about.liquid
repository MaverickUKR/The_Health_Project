{% schema %}
{
  "name": "About Products Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Discover Our Top Products"
    },
    {
      "type": "textarea",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Learn more about our best-selling products and their unique benefits."
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "selected_collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Products",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div class="about-products-section">
  <!-- Левая часть секции - Товары коллекции -->
  <div class="about-product-left">
    {% assign current_collection = collections.first %}
    {% if current_collection and current_collection.products.size > 0 %}
      <div class="about-product-content" id="product-container">
        {% assign first_product = current_collection.products.first %}
        <!-- Навигация по продуктам (вверх и вниз) -->
        <div class="about-product-navigation">
          <button class="nav-button nav-up">&#9650;</button>
          <button class="nav-button nav-down">&#9660;</button>
        </div>

        <!-- Информация о продукте -->
        <div class="about-product-info">
          <h1 class="about-product-title">{{ first_product.title }}</h1>
          <p class="about-product-weight">{{ first_product.variants.first.weight }} {{ first_product.variants.first.weight_unit }}</p>
          <p class="about-product-description">{{ first_product.description }}</p>
          <ul class="about-product-features">
            <li>High-quality whey protein</li>
            <li>Unrivaled value for money</li>
            <li>3 delicious flavours</li>
            <li>Mixes instantly</li>
            <li>Great blend of high-quality proteins</li>
          </ul>
          <button class="buy-now-button">Buy now {{ first_product.price | money }}</button>
        </div>
      </div>
    {% endif %}
  </div>

  <!-- Правая часть секции - Переключение между изображениями товара -->
  <div class="about-product-right">
    <div class="about-product-image-container">
      {% if current_collection %}
        <img src="{{ first_product.featured_image | image_url }}" alt="{{ first_product.title }}" class="about-product-image" />

        <!-- Переключатели для дополнительных изображений товара -->
        {% if first_product.images.size > 1 %}
          <div class="about-product-color-indicators">
            {% assign image_count = 0 %}
            {% for image in first_product.images %}
              {% if image_count < 4 %}
                <span class="color-indicator" data-image-url="{{ image.src }}" style="background-image: url({{ image.src | image_url }})"></span>
                {% assign image_count = image_count | plus: 1 %}
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}
    </div>
  </div>
</div>

<!-- Скрипт для переключения товаров и изображений -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const collections = {{ collections | json }};
    const productContainer = document.getElementById('product-container');
    const collectionIndicators = document.querySelectorAll('.collection-indicator');
    const colorIndicators = document.querySelectorAll('.color-indicator');
    let currentCollectionIndex = 0;
    let currentProductIndex = 0;

    // Функция для обновления информации о товаре
    function updateProductInfo(collectionIndex, productIndex) {
      const collection = collections[collectionIndex];
      const product = collection.products[productIndex];

      document.querySelector('.about-product-title').textContent = product.title;
      document.querySelector('.about-product-weight').textContent = product.variants[0].weight + ' ' + product.variants[0].weight_unit;
      document.querySelector('.about-product-description').textContent = product.body_html;
      document.querySelector('.buy-now-button').textContent = 'Buy now ' + product.price;

      // Обновляем картинку товара
      const productImage = document.querySelector('.about-product-image');
      productImage.src = product.featured_image || '';
      productImage.alt = product.title || 'Product image';

      // Обновление цветных переключателей для изображений
      updateImageIndicators(product.images);
    }

    // Функция для обновления индикаторов изображений
    function updateImageIndicators(images) {
      const indicatorContainer = document.querySelector('.about-product-color-indicators');
      indicatorContainer.innerHTML = ''; // Очищаем текущие индикаторы

      images.slice(0, 4).forEach(image => {
        const indicator = document.createElement('span');
        indicator.className = 'color-indicator';
        indicator.style.backgroundImage = `url(${image.src})`;
        indicator.dataset.imageUrl = image.src;
        indicator.addEventListener('click', () => {
          document.querySelector('.about-product-image').src = image.src;
        });
        indicatorContainer.appendChild(indicator);
      });
    }

    // Навигация по товарам (вверх и вниз)
    document.querySelector('.nav-up').addEventListener('click', () => {
      const collection = collections[currentCollectionIndex];
      currentProductIndex = (currentProductIndex > 0) ? currentProductIndex - 1 : (collection.products.length - 1);
      updateProductInfo(currentCollectionIndex, currentProductIndex);
    });

    document.querySelector('.nav-down').addEventListener('click', () => {
      const collection = collections[currentCollectionIndex];
      currentProductIndex = (currentProductIndex < collection.products.length - 1) ? currentProductIndex + 1 : 0;
      updateProductInfo(currentCollectionIndex, currentProductIndex);
    });

    // Инициализация начального состояния
    updateProductInfo(0, 0);
  });
</script>

