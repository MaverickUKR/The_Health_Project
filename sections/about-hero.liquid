{% schema %}
{
  "name": "About Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Заголовок",
      "default": "Welcome to Our Health Project"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Фоновое изображение"
    }
  ]
}
{% endschema %}

<section class="about-hero" style="background-image: url('{{ section.settings.hero_image | img_url: 'master' }}');">
  <div class="hero-content">
    <h1>{{ section.settings.hero_title }}</h1>
  </div>
</section>
